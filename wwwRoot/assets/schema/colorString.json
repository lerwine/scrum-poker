{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/lerwine/scrum-poker/main/wwwRoot/assets/schema/colorString.json",
    "title": "CSS Color Strings",
    "description": "HTML color string",
    "anyOf": [
        { "$ref": "#/$defs/hsl" },
        { "$ref": "#/$defs/hsla" },
        { "$ref": "#/$defs/rgb" },
        { "$ref": "#/$defs/rgba" },
        { "$ref": "#/$defs/hexColor" },
        { "$ref": "#/$defs/namedColor" }
    ],
    "$defs": {
        "hsl": {
            "type": "string",
            "pattern": "^hsl\\(\\s*0|[12](\\d\\d?)?|3([0-5]\\d?|[6-9]?|[4-9]\\d?(\\s*,\\s*(0|1(00?|[1-9])?|[2-9]\\d?)%){2}\\s*\\)$",
            "minLength": 10
        },
        "hsla": {
            "type": "string",
            "pattern": "^hsla\\(\\s*0|[12](\\d\\d?)?|3([0-5]\\d?|[6-9]?|[4-9]\\d?(\\s*,\\s*(0|1(00?|[1-9])?|[2-9]\\d?)%){2}\\s*,\\s*(1(\\.0)?|0(\\.\\d(\\d\\d?)?)?)\\s*\\)$",
            "minLength": 13
        },
        "rgb": {
            "type": "string",
            "pattern": "rgb\\(\\s*(?(?=\\d+%)(0|1(00?|[1-9])?|[2-9]\\d?)%|(0|1(\\d\\d?)?|2([0-4]\\d?|5[0-5]?|[6-9])?|[3-9]\\d?))(\\s*,\\s*(?(?=\\d+%)(0|1(00?|[1-9])?|[2-9]\\d?)%|(0|1(\\d\\d?)?|2([0-4]\\d?|5[0-5]?|[6-9])?|[3-9]\\d?))){2}\\s*\\)",
            "minLength": 10
        },
        "rgba": {
            "type": "string",
            "pattern": "rgba\\(\\s*((?(?=\\d+%)(0|1(00?|[1-9])?|[2-9]\\d?)%|(0|1(\\d\\d?)?|2([0-4]\\d?|5[0-5]?|[6-9])?|[3-9]\\d?))\\s*,\\s*){3}(1(\\.0)?|0(\\.\\d(\\d\\d?)?)?)\\s*\\)",
            "minLength": 13
        },
        "hexColor": {
            "type": "string",
            "pattern": "^#[a-f\\d]{6}$",
            "minLength": 1
        },
